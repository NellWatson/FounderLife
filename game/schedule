##############################################################################
# Schedule
#
# Screen that's used to set a schedule for the month. 

screen schedule:

    frame:
        style_group "schedule"       
        xalign .5
        yalign .33
       
        #This controls vertical spacing
        has vbox spacing 20

        label "Monthly Schedule"

        grid 4 5:
            transpose True
           
            label "First Week"
            textbutton "School" action ShowMenu ("school_1")
            textbutton "Work" action ShowMenu ("work_1")
            textbutton "Travel" action ShowMenu ("travel_1")
            textbutton "Rest" action ShowMenu ("rest_1")
           
            label "Second Week"
            textbutton "School" action ShowMenu ("school_2")
            textbutton "Work" action ShowMenu ("work_2")
            textbutton "Travel" action ShowMenu ("travel_2")
            textbutton "Rest" action ShowMenu ("rest_2")
           
            label "Third Week"
            textbutton "School" action ShowMenu ("school_3")
            textbutton "Work" action ShowMenu ("work_3")
            textbutton "Travel" action ShowMenu ("travel_3")
            textbutton "Rest" action ShowMenu ("rest_3")
           
            label "Fourth Week"
            textbutton "School" action ShowMenu ("school_4")
            textbutton "Work" action ShowMenu ("work_4")
            textbutton "Travel" action ShowMenu ("travel_4")
            textbutton "Rest" action ShowMenu ("rest_4")

        textbutton "Done" action Return() xalign .5

init python:
    #This controls minimum button length
    style.schedule_button.xminimum = 180
    style.schedule_label.xalign = .5

#WEEK 01

screen school_1:
    
    frame:
        style_group "schedule"       
        xalign .5
        yalign .33
       
        #This controls vertical spacing
        has vbox spacing 20

        label "What Would You Like To Study?"

        grid 1 4:
            transpose True
           
            textbutton "Art" action SetVariable("week01", "Art")
            textbutton "Fencing" action SetVariable("week01", "Fencing")
            textbutton "Math" action SetVariable("week01", "Math")
            textbutton "Alchemy" action SetVariable("week01", "Alchemy")

        textbutton "Select" action Return() xalign .5
        
    
